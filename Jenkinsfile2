pipeline {
    agent any
    
    tools {
        maven 'maven3'
    }
    environment {
        SCANNER_HOME= tool 'sonar-scanner'
    }

    stages {
        stage('Git CheckOut') {
            steps {
                git branch: 'main', url: 'https://github.com/sachi3050/Multi-Tier-With-Database.git'
            }
        }
        stage('Source Code Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Run Test Cases') {
            steps {
                sh 'mvn test -DskipTests'
            }
        }
        stage('Trivy FS Scan') {
            steps {
                sh ' trivy fs --format table -o fs-report.html .'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQUBE') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=GoldenCat-BANK \
                        -Dsonar.java.binaries=. \
                        -Dsonar.projectKey=GoldenCat-BANK '''
                }
            }
        }
        stage('Maven Build Application') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Publish to Nexus') {
            steps {
                withMaven(globalMavenSettingsConfig: 'Global-Maven-GCBank-Config', maven: 'maven3', traceability: true) {
                    sh 'mvn deploy -DskipTests'
                }
            }
        }
        stage('Docker Build and Tag') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'Dock-Cred') {
                        sh 'docker build -t gc-bank .'
                        sh 'docker tag gc-bank sachidananda06/golden-cat:bank1'
                    }
                }
            }
        }
        stage('Scan Docker Image') {
            steps {
                sh 'trivy image sachidananda06/golden-cat:bank1'
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'Dock-Cred') {
                        sh 'docker push sachidananda06/golden-cat:bank1'
                    }
                }
            }
        }
        stage('Deploy to K8s Cluster') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: ' sachi-cluster', contextName: '', credentialsId: 'K8s-Token', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://EFA66CF6FBD90007170065AECA996CF3.gr7.us-east-1.eks.amazonaws.com') {
                    sh 'kubectl apply -f ds.yml -n webapps'
                    sleep 30
                }
            }
        }
        stage('Verify Deployment') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: ' sachi-cluster', contextName: '', credentialsId: 'K8s-Token', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://EFA66CF6FBD90007170065AECA996CF3.gr7.us-east-1.eks.amazonaws.com') {
                    sh 'kubectl get pods -n webapps'
                    sh 'kubectl get svc -n webapps'
                }
            }
        }
    }
}
